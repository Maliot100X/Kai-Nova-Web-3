# ============================================
# KNTWS Sovereign Client - Environment Config
# ============================================
# Copy this file to .env.local and fill in your values

# --- Farcaster / Neynar ---
NEYNAR_API_KEY=your_neynar_api_key
NEXT_PUBLIC_NEYNAR_CLIENT_ID=your_neynar_client_id
NEYNAR_SIGNER_UUID=your_signer_uuid
NEYNAR_SNAPCHAIN_HTTPS=https://snapchain-api.neynar.com/v1/info

# --- Base Mini App ---
NEXT_PUBLIC_BASE_APP_ID=your_base_app_id
BASE_CLIENT_API_KEY=your_base_client_api_key
BASE_PRIVATE_KEY="-----BEGIN EC PRIVATE KEY-----\nyour_private_key_here\n-----END EC PRIVATE KEY-----"

# --- Thirdweb ---
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your_thirdweb_client_id
THIRDWEB_SECRET_KEY=your_thirdweb_secret_key

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# --- Token Contracts (Base Chain) ---
MY_TOKEN_ADDRESS=0xYourTokenAddress
CLANKER_CONTRACT=0xClankerCreatorContractAddress
